@MEDIA all {

body{
	background-color: #E4E6E7;
}

div.main{
	width: 80%;
	min-height: 1000px;
	border: 1px solid #3DA55E;
	margin-left: 10%;
	margin-right: 10%;
	background-color: #fff;
}

div.banner{
	width: 100%;
	height: 150px;
	border: 1px solid #3DA55E;
	background-color: #3DA55E
}

div.banner h2{
	font-size: 30px;
	padding-left: 20px;
	color: #fff;	
}

div.searchArea{
	width: 100%;
	height: 100px;
	border: 1px solid #3DA55E;
}	

form div.form_element{
	margin-top: 43px;
	margin-left: 20%;
	line-height: 25px;
}

form div.form_element label{
	font-weight: bold;
	padding: 10px;
	font-size: 20px;
}

form div.form_element input#searchTerm{
	width: 500px;
	height: 30px;
	border: 1px solid #3DA55E;
}

form div.form_element input#submitButton{
	width: 80px;
	height: 30px;
	text-align: center;
	font-weight: bold;
	border: 1px solid #3DA55E;
	background-color: #3DA55E;
	color: #fff;
	font-size: 18px;
	}
	
div.results{
	width: 100%;
	min-height: 700px;
}

div.media{
	border-bottom: 1px solid #3DA55E;
	padding: 10px;
}

div.results div#information{
	padding: 10px;
	font-size: 18px;
}

div.media div#property{
	width: 90%;
	line-height: 25px;
}

div.media div#property label#label{
	width: 200px;
	float: left;
	font-size: 15px;
}

div.media div#title{
	font-size: 28px;
	text-decoration: underline;
}

div.media div#desc{
	margin-top: -15px;
	width: 70%;
}

div.media div#desc p{
	padding-left: 5px;
	font-size: 16px;
	text-align: justify;
}

div.buyMedia{
	margin-top: 20px;
	margin-left: 199px;	
}

div.buyMedia a#buyLink{
	width: 80px;
	height: 30px;
	text-align: center;
	font-weight: bold;
	border: 1px solid #3DA55E;
	background-color: #3DA55E;
	color: #fff;
	font-size: 18px;
	text-decoration: none;
	padding: 5px 25px;
}

div.customerInfo{
	margin-top: 20px;
}

div.customerInfo div.type-text{
	line-height: 27px;
	height: 38px;
}

div.customerInfo div.type-text label{
	float: left;
	width: 200px;
}

div.customerInfo div.type-text input{
	height: 30px;
	border: 1px solid #3DA55E;
	width: 300px;
}

div.type-submit input.buy{
	width: 100px !important;
	padding: 5px 25px !important;
	background-color: #3DA55E;
	color: #fff;
	font-size: 18px;
	font-weight: bold;
	margin-left: 199px;
	text-align: center;
}
}